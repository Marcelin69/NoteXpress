					<h1 class="display-5 fw-bold">{{ note.title }}</h1>
					<p>{{note.content }}</p>
					<p>Categories :
						{{ note.category.name }}</p>
					<p>Ecrie par :
						{{ note.user.name }}
					</p>
					<div class=" d-flex m-2 ">
						<a href="{{ path('app_main') }}" class=" mx-2 "><button class="btn btn-primary btn-lg" type="button">back to list</button></a>

						<a href="{{ path('app_note_edit', {'id': note.id}) }}" class="  mx-2 "><button class="btn btn-primary btn-lg" type="button">edit</button></a>

						<div>
                        {{ include('note/_delete_form.html.twig') }}
                        </div>
					</div>
				</div>
			</div>
		</div>
	</main>


